<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/createEventScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.syracuse.android.flavors.fragments.ViewUserProfileFragment">


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook Profile"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/facebookProfileButton"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="167.5dp"
            android:layout_toEndOf="@+id/circleView" />

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:scaleType="fitXY"
            android:src="@drawable/view_profile_background" />

        <com.pkmmte.view.CircularImageView
            android:id="@+id/circleView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="130dp"
            app:border="true"
            app:border_color="#C62828"
            app:border_width="1dp" />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/circleView"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="3dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/contact" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circleView"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circleView"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="35dp"
                android:text=""
                android:textColor="@color/half_black"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/mobileNumberET1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circleView"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="55dp"
                android:text=""
                android:textColor="@color/half_black"
                android:textSize="14dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/cardView"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="3dp">

            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Date of Birth"
                android:textColor="@color/half_black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/foodInterestTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="Food Interests"
                android:textColor="@color/half_black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/foodInterestET"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="40dp"
                android:text=""
                android:textColor="@color/half_black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/dateVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/half_black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/eventsOrgainised"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodInterestTV"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:text="Events Organised"
                android:textColor="@color/half_black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/eventsOrgainisedTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodInterestTV"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="70dp"
                android:text=""
                android:textColor="@color/half_black"
                android:textSize="14dp" />


        </android.support.v7.widget.CardView>


    </RelativeLayout>
</ScrollView>