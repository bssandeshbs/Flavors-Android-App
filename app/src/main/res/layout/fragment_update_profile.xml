<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syracuse.android.flavors.fragments.UpdateProfileFragment"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:id="@+id/background"
        android:src="@drawable/view_profile_background"
        android:scaleType="fitXY" />

    <com.pkmmte.view.CircularImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="130dp"
        android:id="@+id/circleView"
        app:border="true"
        app:border_color="#C62828"
        app:border_width="1dp"/>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/circleView"
        android:textSize="17dp"
        android:text=""
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textStyle="normal"
        android:text=""
        android:layout_below="@+id/circleView"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="45dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/mobileNumberET1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/circleView"
        android:hint="Mobile Number"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="13dp"
        fab:met_floatingLabel="highlight"
        fab:met_maxCharacters="10"
        fab:met_primaryColor="?colorPrimary"
        fab:met_singleLineEllipsis="true" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateImg"
        android:src="@drawable/datetime"
        android:layout_below="@+id/circleView"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:id="@+id/dateTxt"
        android:textSize="12dp"
        android:layout_below="@+id/circleView"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="80dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circleView"
        android:id="@+id/dateVal"
        android:text="date"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="255dp"
        android:textSize="12dp"
        />



    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/foodInterestET"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="140dp"
        android:layout_below="@+id/circleView"
        android:hint="Food Interests"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="13dp"
        fab:met_floatingLabel="highlight"
        fab:met_maxCharacters="30"
        fab:met_primaryColor="?colorPrimary"
        fab:met_singleLineEllipsis="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Update Profile"
        android:id="@+id/updateProfileBt"
        android:layout_below="@+id/circleView"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="115dp"/>


</RelativeLayout>
</ScrollView>