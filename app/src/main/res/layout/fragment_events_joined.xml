<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/createEventScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.syracuse.android.flavors.fragments.EventsJoinedFragment">

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="175dp" />

        <TextView
            android:id="@+id/eventDetailsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slider"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="Event Details Test"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp" />


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_below="@+id/eventDetailsTV"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="0dp">

            <ImageView
                android:id="@+id/menuImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/my_events_menu" />

            <TextView
                android:id="@+id/menuTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/menuImg"
                android:text="Flavors Served"
                android:textColor="@color/half_black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/eventTimeImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/menuImg"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/my_events_time" />


            <TextView
                android:id="@+id/startTimeTVVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuTV"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="36dp"
                android:layout_toRightOf="@+id/eventTimeImg"
                android:text="Event Starting on"
                android:textColor="@color/half_black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/venuImg"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_below="@+id/slider"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="65dp"
                android:src="@drawable/gps" />


            <TextView
                android:id="@+id/venueTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/slider"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="55dp"
                android:layout_marginTop="66dp"
                android:layout_toRightOf="@+id/menuImg"
                android:paddingRight="10dp"
                android:text="427 columbus Avenue Syracuse 13210 NY USA"
                android:textColor="@color/half_black"
                android:textIsSelectable="true"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/navigationIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="65dp"
                android:src="@drawable/navigation_map_icon" />


        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_below="@+id/cardView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/createdBy"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/cardView"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/half_black"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/calendarIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/createdBy"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:src="@drawable/my_events_calendar"
            android:visibility="gone" />

    </RelativeLayout>
</ScrollView>