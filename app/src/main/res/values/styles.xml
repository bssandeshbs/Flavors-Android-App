<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">#D94818</item>
        <item name="colorPrimaryDark">#141414</item>
        <item name="colorPrimary">#212121</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
        <item name="android:textColorPrimaryInverse">#FFFFFF</item>

        <item name="sublimePickerStyle">@style/SPDefaultImpl</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="SPDefaultImpl" parent="SublimePickerStyleLight">

        <item name="spTimePickerStyle">@style/MySublimeTimePickerStyle</item>

        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">#212121</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
        <item name="android:textColorPrimaryInverse">#FFFFFF</item>
    </style>

    <style name="MySublimeTimePickerStyle" parent="SublimeTimePickerStyle">
        <item name="headerBackground">@color/colorPrimary</item>
    </style>

    <style name="AppThemeDatePicker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#D94818</item>
        <item name="colorPrimaryDark">#141414</item>
        <item name="colorPrimary">#212121</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
        <item name="android:textColorPrimaryInverse">#FFFFFF</item>

        <item name="sublimePickerStyle">@style/SPDefaultImpl</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Switch to default -->

    <style name="SublimePickerDefault">
        <item name="sublimePickerStyle">@style/SPDefaultImpl</item>
    </style>

    <!-- ShowExtendedBg -->

    <style name="ShowExtendedBg">
        <item name="sublimePickerStyle">@style/SPExtendedBg</item>
    </style>

    <style name="SPExtendedBg" parent="SPDefaultImpl">
        <item name="spButtonLayoutStyle">@style/BLExtendedBgImpl</item>
    </style>

    <style name="BLExtendedBgImpl" parent="ButtonLayoutStyle">
        <item name="buttonModeSwitcherButtonStyle">@style/SInvertedButtonBarButtonStyle</item>
        <item name="extendPartitionThroughButtonBar">true</item>
        <item name="extendedPartitionBgColor">?attr/colorAccent</item>
        <item name="buttonInvertedBgColor">?attr/colorAccent</item>
        <item name="buttonPressedInvertedBgColor">@color/ripple_material_dark</item>
    </style>

    <!-- ShowSingleMonthPerPosition -->

    <style name="ShowSingleMonthPerPosition">
        <item name="sublimePickerStyle">@style/SPSingleMonthPerPosition</item>
    </style>

    <style name="SPSingleMonthPerPosition" parent="SPDefaultImpl">
        <item name="spMonthViewStyle">@style/MVSingleMonthPerPositionImpl</item>
    </style>

    <style name="MVSingleMonthPerPositionImpl" parent="MonthViewStyle">
        <item name="showSingleMonthPerPosition">true</item>
    </style>

    <!-- ShowExtendedBg + ShowSingleMonthPerPosition -->

    <style name="ShowExtendedBgAndSingleMonthPerPosition">
        <item name="sublimePickerStyle">@style/SPExtendedBgAndSingleMonthPerPosition</item>
    </style>

    <style name="SPExtendedBgAndSingleMonthPerPosition" parent="SPDefaultImpl">
        <item name="spMonthViewStyle">@style/MVSingleMonthPerPositionImpl</item>
        <item name="spButtonLayoutStyle">@style/BLExtendedBgImpl</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="PopupMenuEventScreen" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="MyAppTheme" parent="MyAppTheme.Base">

    </style>

    <style name="MyAppTheme.Base" parent="Theme.AppCompat">
        <item name="sublimePickerStyle">@style/SPDefaultImpl</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>  <!--primary color of toolbar and other components-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>  <!-- color on top of tool bar-->
        <item name="android:windowBackground">@color/windowBackground</item> <!--background color of all screens-->
        <item name="colorButtonNormal">@color/buttonColor</item>   <!--button background color -->
        <item name="android:textColor">@color/black</item>      <!-- text color of UI components like Edittext Name, Textbox name -->
       <item name="android:textColorSecondary">@color/white</item>  <!--text color of UI underlined components-->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <array name="fab_icon">
        <item>@style/LightFABIcon</item>
        <item>@style/DarkFABIcon</item>
    </array>


    <style name="DarkFABIcon" parent="Material.Widget.FloatingActionButton.Light">
        <item name="rd_rippleColor">#33000000</item>
        <item name="fab_backgroundColor">@color/yellow</item>
    </style>

    <style name="LightFABIcon" parent="Material.Widget.FloatingActionButton.Light">
        <item name="rd_rippleColor">#33000000</item>
        <item name="fab_backgroundColor">@color/colorPrimary</item>
    </style>

</resources>
